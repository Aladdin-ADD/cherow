{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "diagnostics": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strict": true,
    "stripInternal": true,
    "baseUrl": "../packages",
    "paths": {
      "@cherow": ["cherow/src/cherow"],
      "@cherow/flow": ["cherow-flow/src/cherow-flow"],
      "@cherow/linter": ["cherow-linter/src/cherow-linter"],
      "@cherow/minify": ["cherow-minify/src/cherow-minify"],
      "@cherow/ts": ["cherow-ts/src/cherow-ts"]
    }
  }
}
